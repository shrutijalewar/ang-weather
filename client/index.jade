doctype html
html(ng-app='weather', lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Weather
    link(href='/vendor/bootstrap/dist/css/bootstrap.css', rel='stylesheet')
    link(href='/vendor/fontawesome/css/font-awesome.css', rel='stylesheet')
    link(href='/index.css', rel='stylesheet')
  body(ng-controller='MainController')
    include nave
    .container
      .row
        .col-xs-12
          h1 {{title}}

          #container(ng-view)

    script(src='/vendor/angular/angular.js')
    script(src='/vendor/angular-route/angular-route.js')
    script(src='/vendor/jquery/dist/jquery.js')
    script(src='/vendor/bootstrap/dist/js/bootstrap.js')
    script(src='/index.js')
    script(src='/views/conditions/conditions.js')
    script(src='/views/webcams/webcams.js')
    script(src='/views/forecast/forecast.js')
    script(src='/components/wu.js')

